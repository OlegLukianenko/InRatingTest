<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="inratind.test.application.viewmodel.StatisticsPostFragmentViewModel" />

        <variable
            name="handler"
            type="inratind.test.application.app.home.StatisticsPostFragment" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:ignore="MissingConstraints">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/headerBackground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/headerResizer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.12" />

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:elevation="3dp"
                android:src="@drawable/ic_back_ripple"
                app:layout_constraintBottom_toBottomOf="@+id/textPricing"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textPricing"
                app:layout_constraintWidth_percent="0.06" />

            <TextView
                android:id="@+id/textPricing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:text="@string/statistics_post"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/viewsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/headerBackground">

            <View
                android:id="@+id/viewsBackground"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_btn_white_border_rounded"
                android:elevation="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/viewsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/ic_visibility"
                android:elevation="3dp"
                android:text="@{viewModel.getInformationOfPostResponseMutable().getValue().data.views_count == 0 ? @string/views + &quot; 0&quot; : @string/views + &quot; &quot; + viewModel.getInformationOfPostResponseMutable().getValue().data.views_count}"
                android:textAlignment="center"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/viewsBackground"
                app:layout_constraintStart_toStartOf="@+id/viewsBackground"
                app:layout_constraintTop_toTopOf="@+id/viewsBackground" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/likeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/viewsContainer">

            <View
                android:id="@+id/likeBackground"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_btn_white_border_rounded"
                android:elevation="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/likeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textAlignment="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:elevation="3dp"
                android:textSize="12dp"
                android:drawableLeft="@drawable/ic_likes"
                android:text="@{viewModel.getUserLikersAllResponseMutable().getValue().data.meta.total == null ? @string/like + &quot; 0&quot; : @string/like + &quot; &quot; + viewModel.getUserLikersAllResponseMutable().getValue().data.meta.total}"
                app:layout_constraintStart_toStartOf="@+id/likeBackground"
                app:layout_constraintTop_toTopOf="@+id/likeBackground" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycleView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHeight_max="wrap"
                app:layout_constraintHeight_percent="0.22"
                android:orientation="horizontal"
                android:overScrollMode="never"
                android:elevation="3dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/likeBackground"
                app:layout_constraintEnd_toEndOf="@+id/likeBackground"
                app:layout_constraintStart_toStartOf="@+id/likeBackground"
                app:layout_constraintTop_toBottomOf="@+id/likeCount" />

        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:id="@+id/commentatorsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/likeContainer">

            <View
                android:id="@+id/commentatorsBackground"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_btn_white_border_rounded"
                android:elevation="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/commentatorsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textAlignment="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:elevation="3dp"
                android:textSize="12dp"
                android:drawableLeft="@drawable/ic_commentary"
                android:text="@{viewModel.getUserCommentatorsAllResponseMutable().getValue().data.meta.total == null ? @string/commentators + &quot; 0&quot; : @string/commentators + &quot; &quot; + viewModel.getUserCommentatorsAllResponseMutable().getValue().data.meta.total}"
                app:layout_constraintStart_toStartOf="@+id/commentatorsBackground"
                app:layout_constraintTop_toTopOf="@+id/commentatorsBackground" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/commentatorsRecycleView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHeight_max="wrap"
                app:layout_constraintHeight_percent="0.22"
                android:orientation="horizontal"
                android:overScrollMode="never"
                android:elevation="3dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/commentatorsBackground"
                app:layout_constraintEnd_toEndOf="@+id/commentatorsBackground"
                app:layout_constraintStart_toStartOf="@+id/commentatorsBackground"
                app:layout_constraintTop_toBottomOf="@+id/commentatorsCount" />

        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:id="@+id/mentionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/commentatorsContainer">

            <View
                android:id="@+id/mentionsBackground"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_btn_white_border_rounded"
                android:elevation="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mentionsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textAlignment="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:elevation="3dp"
                android:textSize="12dp"
                android:drawableLeft="@drawable/ic_perm"
                android:text="@{viewModel.getUserMentionsAllResponseMutable().getValue().data.meta.total == null ? @string/marks + &quot; 0&quot; : @string/marks + &quot; &quot; + viewModel.getUserMentionsAllResponseMutable().getValue().data.meta.total}"
                app:layout_constraintStart_toStartOf="@+id/mentionsBackground"
                app:layout_constraintTop_toTopOf="@+id/mentionsBackground" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mentionsRecycleView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHeight_max="wrap"
                app:layout_constraintHeight_percent="0.22"
                android:orientation="horizontal"
                android:overScrollMode="never"
                android:elevation="3dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/mentionsBackground"
                app:layout_constraintEnd_toEndOf="@+id/mentionsBackground"
                app:layout_constraintStart_toStartOf="@+id/mentionsBackground"
                app:layout_constraintTop_toBottomOf="@+id/mentionsCount" />

        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:id="@+id/repostersContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/mentionsContainer">

            <View
                android:id="@+id/repostersBackground"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_btn_white_border_rounded"
                android:elevation="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/repostersCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/ic_repost"
                android:elevation="3dp"
                android:text="@{viewModel.getUserRepostersAllResponseMutable().getValue().data.meta.total == null ? @string/reposts + &quot; 0&quot; : @string/reposts + &quot; &quot; + viewModel.getUserRepostersAllResponseMutable().getValue().data.meta.total}"
                android:textAlignment="center"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/repostersBackground"
                app:layout_constraintStart_toStartOf="@+id/repostersBackground"
                app:layout_constraintTop_toTopOf="@+id/repostersBackground" />

        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:id="@+id/bookmarksContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/repostersContainer">

            <View
                android:id="@+id/bookmarksBackground"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_btn_white_border_rounded"
                android:elevation="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bookmarksCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/ic_bookmark"
                android:elevation="3dp"
                android:text="@{viewModel.getInformationOfPostResponseMutable().getValue().data.bookmarks_count == 0 ? @string/bookmarks + &quot; 0&quot; : @string/bookmarks + &quot; &quot; + viewModel.getInformationOfPostResponseMutable().getValue().data.bookmarks_count}"
                android:textAlignment="center"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/bookmarksBackground"
                app:layout_constraintStart_toStartOf="@+id/bookmarksBackground"
                app:layout_constraintTop_toTopOf="@+id/bookmarksBackground" />

        </android.support.constraint.ConstraintLayout>

        <include
            android:id="@+id/includeLayoutProgressBar"
            layout="@layout/layout_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="9dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:viewModel="@{viewModel}"
            tools:visibility="gone" />

    </android.support.constraint.ConstraintLayout>
</layout>